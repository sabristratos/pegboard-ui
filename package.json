{
  "name": "@stratos/pegboard",
  "version": "0.1.3",
  "description": "A professional Alpine.js and TypeScript UI component library for TALL stack applications",
  "type": "module",
  "main": "./dist/pegboard.js",
  "module": "./dist/pegboard.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/pegboard.js",
      "default": "./dist/pegboard.js"
    }
  },
  "files": [
    "dist",
    "resources"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "laravel",
    "livewire",
    "alpine",
    "alpinejs",
    "typescript",
    "ui",
    "components",
    "tall-stack",
    "stratos",
    "pegboard"
  ],
  "author": {
    "name": "Mohamed Sabri Ben Chaabane",
    "email": "sabri@stratosdigital.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabristratos/pegboard-ui.git"
  },
  "bugs": {
    "url": "https://github.com/sabristratos/pegboard-ui/issues"
  },
  "homepage": "https://github.com/sabristratos/pegboard-ui#readme",
  "peerDependencies": {
    "alpinejs": "^3.0.0"
  },
  "dependencies": {
    "@alpinejs/anchor": "^3.15.0",
    "@alpinejs/mask": "^3.15.0",
    "@oddbird/css-anchor-positioning": "^0.7.0",
    "@tiptap/core": "^3.7.2",
    "@tiptap/extension-image": "^3.7.2",
    "@tiptap/extension-link": "^3.7.2",
    "@tiptap/extension-placeholder": "^3.7.2",
    "@tiptap/pm": "^3.7.2",
    "@tiptap/starter-kit": "^3.7.2",
    "tiptap-extension-resize-image": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "alpinejs": "^3.15.0",
    "typescript": "^5.7.3",
    "vite": "^7.0.4"
  }
}
